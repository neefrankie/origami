{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
      "src/**/*",
      "test/**/*"
    ],
  "exclude": [
    "package.json"
  ],
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
    }
  }
}
