/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff1e0;
}
.media-holder__outer {
  position: relative;
  height: 0;
  padding-top: 56.25%;
}

.media-holder__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.media-holder__image {
  width: 100%;
  height: 100%;
}